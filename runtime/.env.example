# MCP Runtime Orchestrator Development Configuration
# Copy this file to .env and modify as needed

# Application Settings
MCP_RUNTIME_VERSION=0.1.0
MCP_RUNTIME_ENVIRONMENT=development
MCP_RUNTIME_DEBUG=true

# Server Configuration
MCP_RUNTIME_HOST=0.0.0.0
MCP_RUNTIME_PORT=8000

# Logging
MCP_RUNTIME_LOG_LEVEL=INFO

# Security
MCP_RUNTIME_JWT_SECRET_KEY=your-secret-key-here-change-in-production
MCP_RUNTIME_ALLOWED_HOSTS=["*"]
MCP_RUNTIME_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Database (PostgreSQL)
# MCP_RUNTIME_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mcp_runtime
# MCP_RUNTIME_DATABASE_POOL_SIZE=10
# MCP_RUNTIME_DATABASE_MAX_OVERFLOW=20

# Redis
# MCP_RUNTIME_REDIS_URL=redis://localhost:6379/0
# MCP_RUNTIME_REDIS_POOL_SIZE=10

# Azure Configuration (for production)
# MCP_RUNTIME_AZURE_TENANT_ID=your-tenant-id
# MCP_RUNTIME_AZURE_CLIENT_ID=your-client-id  
# MCP_RUNTIME_AZURE_CLIENT_SECRET=your-client-secret
# MCP_RUNTIME_AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
# MCP_RUNTIME_AZURE_STORAGE_ACCOUNT=yourstorageaccount
# MCP_RUNTIME_AZURE_STORAGE_CONTAINER=connectors

# Runtime Configuration
MCP_RUNTIME_MAX_CONCURRENT_CONNECTORS=100
MCP_RUNTIME_CONNECTOR_TIMEOUT_SECONDS=30
MCP_RUNTIME_RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Development Settings
MCP_RUNTIME_HOT_RELOAD=true

# Observability
MCP_RUNTIME_ENABLE_METRICS=true
MCP_RUNTIME_ENABLE_TRACING=true
# MCP_RUNTIME_OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
